{
  "name": "lila",
  "private": true,
  "license": "MIT",
  "scripts": {
    "precommit": "npm run lint-staged",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"./**/*.{js,jsx,vue,css,less,scss,sass,html,md,json}\"",
    "eslint": "eslint \"./**/*.js\"",
    "eslint:fix": "eslint \"./**/*.js\" --fix",
    "eslint:react": "eslint \"./**/*.jsx\" -c .eslintrc.react.js",
    "eslint:react:fix": "eslint \"./**/*.jsx\" -c .eslintrc.react.js --fix",
    "eslint:vue": "eslint \"./**/*.vue\" -c .eslintrc.vue.js",
    "eslint:vue:fix": "eslint \"./**/*.vue\" -c .eslintrc.vue.js --fix",
    "stylelint": "stylelint \"./**/*.{css,less,scss,sass,vue}\"",
    "stylelint:fix": "stylelint \"./**/*.{css,less,scss,sass,vue}\" --fix",
    "build": "rollup -c",
    "build:bin": "npm run build -- --name bin",
    "build:create": "npm run build -- --name create",
    "build:core": "npm run build -- --name core",
    "build:tasks": "npm run build -- --name tasks",
    "build:webpack": "npm run build -- --name webpack",
    "build:webpack-config": "npm run build -- --name webpack-config",
    "build:webpack-lib": "npm run build -- --name webpack-lib",
    "build:webpack-lib-config": "npm run build -- --name webpack-lib-config",
    "build:rollup": "npm run build -- --name rollup",
    "build:rollup-config": "npm run build -- --name rollup-config",
    "build:all": "npm run build -- --name all",
    "clean": "rimraf packages/*/lib",
    "test": "jest packages/*/test",
    "test:core": "jest packages/lila-core/test"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^1.3.1",
    "istanbul": "^0.4.5",
    "jest": "^23.6.0",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "minimist": "^1.2.0",
    "prettier": "^1.15.3",
    "rd": "^2.0.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-json": "^3.1.0",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.jsx": [
      "eslint -c .eslintrc.react.js --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.vue": [
      "eslint -c .eslintrc.vue.js --fix",
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{css,less,scss,sass}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{html,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
