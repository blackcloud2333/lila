{
  "name": "lila",
  "private": true,
  "license": "MIT",
  "scripts": {
    "precommit": "npm run lint-staged",
    "prettier": "prettier --write ./**/*.{js,json,md}",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "build": "rollup -c",
    "build:cli": "PKG_NAME=cli npm run build",
    "build:core": "PKG_NAME=core npm run build",
    "build:webpack": "PKG_NAME=webpack npm run build"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "jest": "^23.4.0",
    "lerna": "^3.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "rollup": "^0.66.2",
    "rollup-plugin-json": "^3.1.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
